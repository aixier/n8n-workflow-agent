# n8n Workflow Agent Configuration
# Copy this file to .env and fill in your values

# n8n Instance Configuration
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=your_api_key_here

# Webhook Configuration
WEBHOOK_BASE_PATH=/webhook
WEBHOOK_TIMEOUT=30000

# Database Configuration (if needed)
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=n8n
DATABASE_USER=n8n
DATABASE_PASSWORD=

# AI Service Configuration
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DASHSCOPE_API_KEY=  # For Qwen/Aliyun

# Test Configuration
TEST_ENVIRONMENT=development
TEST_PARALLEL=false
TEST_TIMEOUT=30000
TEST_RETRY_COUNT=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/agent.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Performance Configuration
MAX_CONCURRENT_WORKFLOWS=5
WORKFLOW_EXECUTION_TIMEOUT=300
BATCH_SIZE=100

# Security Configuration
ENABLE_AUTH=false
AUTH_TOKEN=
ALLOWED_ORIGINS=*
RATE_LIMIT=100

# Storage Configuration
DATA_PATH=./data
BACKUP_PATH=./backups
TEMP_PATH=/tmp/n8n-agent

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_CACHE=true
ENABLE_DEBUG=false

# Notification Configuration
NOTIFICATION_ENABLED=false
NOTIFICATION_WEBHOOK=
SLACK_WEBHOOK=
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=
EMAIL_FROM=

# Agent Configuration
AGENT_MODE=development  # development | production
AGENT_AUTO_BACKUP=true
AGENT_AUTO_OPTIMIZE=false
AGENT_HEALTH_CHECK_INTERVAL=60000